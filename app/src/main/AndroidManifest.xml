<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.max.sudokusolver">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dev.games.sudoku.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.dev.games.sudoku.sudoku_game.GameActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.dev.games.sudoku.solver.SolverActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.dev.games.sudoku.MenuActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>